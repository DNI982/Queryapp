
{
  "version": "1",
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "description": "The user's role in the system.",
          "enum": ["super-admin", "admin", "db-manager", "db-analyst", "pending-approval"]
        },
        "requestedRole": {
          "type": "string",
          "description": "The role requested by a user during registration.",
           "enum": ["admin", "db-manager", "db-analyst"]
        }
      },
      "required": ["email", "role"]
    },
    "pendingUser": {
      "title": "Pending User",
      "description": "Represents a user registration that is pending administrator approval.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The email address of the user pending approval."
        },
        "uid": {
          "type": "string",
          "description": "The Firebase Authentication UID of the user."
        },
        "requestedAt": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp when the user registered."
        },
        "requestedRole": {
          "type": "string",
          "description": "The role requested by a user during registration.",
           "enum": ["admin", "db-manager", "db-analyst"]
        }
      },
      "required": ["email", "uid", "requestedAt", "requestedRole"]
    },
    "dataSource": {
      "title": "Data Source",
      "description": "Represents a connection to a database.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "connectionType": {
          "type": "string"
        },
        "host": {
          "type": "string"
        },
        "port": {
          "type": "number"
        },
        "username": {
          "type": "string"
        },
        "database": {
          "type": "string"
        },
        "connectionString": {
          "type": "string"
        },
        "schema": {
          "type": "string"
        },
        "schemaAnalysis": {
          "type": "string"
        },
        "ownerId": {
          "type": "string"
        }
      },
      "required": ["name", "type", "ownerId"]
    },
    "rolePermission": {
      "title": "Role Permission",
      "description": "Defines permissions for a specific role and module.",
      "type": "object",
      "properties": {
        "role": { "type": "string", "enum": ["admin", "db-manager", "db-analyst"] },
        "moduleId": { "type": "string" },
        "canRead": { "type": "boolean" },
        "canWrite": { "type": "boolean" },
        "canDelete": { "type": "boolean" }
      },
      "required": ["role", "moduleId", "canRead", "canWrite", "canDelete"]
    }
  },
  "auth": {
    "providers": ["email-password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "Stores public information about a user, including their role."
    },
    "/pendingUsers/{userId}": {
        "schema": {
            "$ref": "#/entities/pendingUser"
        },
        "description": "Stores registration requests that are pending approval by a super-admin."
    },
    "/dataSources/{dataSourceId}": {
      "schema": {
        "$ref": "#/entities/dataSource"
      },
      "description": "Stores data source connections for users."
    },
    "/permissions/{permissionId}": {
      "schema": {
        "$ref": "#/entities/rolePermission"
      },
      "description": "Stores dynamic permissions for roles on a per-module basis, configurable by the super-admin."
    }
  }
}
