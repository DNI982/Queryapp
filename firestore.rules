rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Authentication required for all access.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Enforces user-ownership for data access.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

     /**
      * @description Checks if the authenticated user's UID matches the provided ownerId, and that the resource exists.
      * @path N/A
      * @allow N/A
      * @deny N/A
      * @principle Prevents actions on non-existent resources.
      */
    function isExistingOwner(ownerId) {
        return isSignedIn() && request.auth.uid == ownerId && exists(resource.path);
    }

    /**
     * @description Checks if the authenticated user has the specified role.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Enforces role-based access control.
     */
    function hasRole(role) {
      return isSignedIn() && request.auth.token.role == role;
    }

    /**
     * @description Checks if the authenticated user has super-admin role.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Super-admin role has unrestricted access.
     */
    function isSuperAdmin() {
      return hasRole('super-admin');
    }

    /**
     * @description Checks if the authenticated user has admin role.
     */
    function isAdmin() {
      return hasRole('admin');
    }

    /**
     * @description Checks if the authenticated user has db-manager role.
     */
    function isDbManager() {
      return hasRole('db-manager');
    }

    /**
     * @description Checks if the authenticated user has db-analyst role.
     */
    function isDbAnalyst() {
      return hasRole('db-analyst');
    }

    /**
     * @description Rules for user profiles.
     * @path /users/{userId}
     * @allow (get) Authenticated user can retrieve their own profile.
     * @allow (create) Authenticated user can create their own profile.
     * @allow (update) Authenticated user can update their own profile. Super admins can update any user profile.
     * @deny (list) Listing all users is not allowed.
     * @deny (delete) Users cannot delete their own profiles (handled through account deletion).
     * @deny (create) Users cannot create profiles for other users.
     * @principle Enforces document ownership and restricts unauthorized access.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.auth.token.email == request.resource.data.email;
      allow update: if isOwner(userId) || isSuperAdmin();
      allow delete: if false;
    }

    /**
     * @description Rules for pending user registrations.
     * @path /pendingUsers/{userId}
     * @allow (get) Only super-admins can retrieve pending user data.
     * @allow (create) Only an authenticated user can create a pending user document for themselves.
     * @allow (update) Only super-admins can update pending user data.
     * @deny (list) Listing all pending users is not allowed.
     * @deny (delete) Only super-admins can delete pending user requests.
     * @principle Restricts access to sensitive registration data to authorized personnel.
     */
    match /pendingUsers/{userId} {
      allow get: if isSuperAdmin();
      allow list: if false;
      allow create: if isOwner(userId) && request.auth.uid == request.resource.data.uid;
      allow update: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    /**
     * @description Rules for data sources.
     * @path /dataSources/{dataSourceId}
     * @allow (get) Authenticated owner can retrieve their data source.
     * @allow (list) Listing data sources is not allowed.
     * @allow (create) Authenticated user can create their own data source.
     * @allow (update) Authenticated owner can update their own data source.
     * @deny (delete) Only authenticated owner can delete their own data source.
     * @principle Enforces document ownership and restricts unauthorized access.
     */
    match /dataSources/{dataSourceId} {
      allow get: if isOwner(resource.data.ownerId);
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isOwner(resource.data.ownerId);
      allow delete: if isOwner(resource.data.ownerId);
    }

    /**
     * @description Rules for role permissions.
     * @path /permissions/{permissionId}
     * @allow (get) Only super-admins can retrieve role permissions.
     * @allow (list) Only super-admins can list role permissions.
     * @allow (create) Only super-admins can create role permissions.
     * @allow (update) Only super-admins can update role permissions.
     * @deny (delete) Only super-admins can delete role permissions.
     * @principle Restricts access to sensitive role permission data to authorized personnel.
     */
    match /permissions/{permissionId} {
      allow get: if isSuperAdmin();
      allow list: if isSuperAdmin();
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }
  }
}