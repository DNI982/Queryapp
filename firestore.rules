rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user has the 'super-admin' role.
     */
    function isSuperAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin';
    }

    /**
     * @description Checks if the user has the 'admin' role.
     */
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    /**
     * @description Checks if the user has the 'db-manager' role.
     */
    function isDbManager() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'db-manager';
    }

    /**
     * @description Checks if the user has the 'db-analyst' role.
     */
    function isDbAnalyst() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'db-analyst';
    }

    /**
     * @description Checks if the user has the 'pending-approval' role.
     */
    function isPendingApproval() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'pending-approval';
    }

    /**
     * @description Checks if the user is the owner of the data source.
     */
    function isDataSourceOwner(ownerId) {
      return isSignedIn() && request.auth.uid == ownerId;
    }

    /**
     * @description Checks if the user is the owner of the data source and the document exists.
     */
    function isExistingDataSourceOwner(ownerId) {
      return isDataSourceOwner(ownerId) && get(resource).data.ownerId == ownerId;
    }

    /**
     * @description Checks if the user is an existing owner.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && get(resource).data.userId == userId;
    }

    /**
     * @description Checks if the userId in the path matches the userId in the data.
     */
    function isValidUserId(userId) {
      return request.resource.data.email == get(/databases/$(database)/documents/users/$(userId)).data.email;
    }

    /**
     * @description Rules for /users/{userId} documents.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if request.auth.uid == userId && request.auth.token.email == request.resource.data.email;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
          
        function userExists() {
            return exists(/databases/$(database)/documents/users/$(userId));
        }
    }

    /**
     * @description Rules for /pendingUsers/{userId} documents.
     */
    match /pendingUsers/{userId} {
      allow get, list: if isSuperAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isSuperAdmin();
    }

    /**
     * @description Rules for /dataSources/{dataSourceId} documents.
     */
    match /dataSources/{dataSourceId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.ownerId;
      allow update: if isSignedIn() && request.auth.uid == resource.data.ownerId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    /**
     * @description Rules for /permissions/{permissionId} documents.
     */
    match /permissions/{permissionId} {
      allow get, list, create, update, delete: if isSuperAdmin();
    }
  }
}